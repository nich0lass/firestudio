{
  "name": "firestudio",
  "version": "1.0.0",
  "description": "A powerful open-source GUI client for Firebase Firestore",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder --win --mac --linux",
    "release": "npm run build && electron-builder --publish always",
    "release:win": "npm run build && electron-builder --win --publish always",
    "release:mac": "npm run build && electron-builder --mac --publish always",
    "release:linux": "npm run build && electron-builder --linux --publish always",
    "generate-icon": "node scripts/generate-icon.js",
    "preview": "vite preview"
  },
  "keywords": [
    "firebase",
    "firestore",
    "firebase-admin",
    "firebase-gui",
    "firestore-gui",
    "firestore-client",
    "firestore-viewer",
    "firestore-browser",
    "firestore-editor",
    "firestore-manager",
    "database-gui",
    "database-client",
    "nosql",
    "nosql-gui",
    "document-database",
    "google-cloud",
    "gcp",
    "electron",
    "electron-app",
    "react",
    "material-ui",
    "mui",
    "desktop-app",
    "cross-platform",
    "data-viewer",
    "json-viewer",
    "query-builder",
    "firefoo",
    "firefoo-alternative"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.0",
    "@mui/material": "^5.15.0",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^3.0.1",
    "firebase-admin": "^12.0.0",
    "mime-types": "^2.1.35",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.flowdesk.firestudio",
    "productName": "Firestudio",
    "copyright": "Copyright Â© 2025 Flowdesk",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-Windows-${arch}.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.developer-tools",
      "artifactName": "${productName}-${version}-macOS-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets",
      "category": "Development",
      "artifactName": "${productName}-${version}-Linux-${arch}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "flowdesk",
      "repo": "firestudio"
    }
  }
}